# Environment variables needed for the application
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Twitter API Configuration
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Optional: Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Optional: Vector Store Configuration
VECTOR_STORE_DIR=vector_store  # Directory to store user profiles

# Optional: Assistant Configuration
# DELEGATION_ASSISTANT_ID=asst_your_delegation_assistant_id  # If you have a pre-created assistant
# PROFILE_ASSISTANT_ID=asst_your_profile_assistant_id  # If you have a pre-created assistant
# SPORTS_ASSISTANT_ID=asst_your_sports_assistant_id  # If you have a pre-created assistant
# TONE_ASSISTANT_ID=asst_your_tone_assistant_id  # If you have a pre-created assistant

# Environment settings
ENVIRONMENT=development  # Options: development, staging, production

# Feature settings
DEBUG_MODE=false  # Set to "true" to enable debug mode
USE_AGENT_SYSTEM=true  # Set to "false" to disable agent system
ADD_MESSAGE_LINKS=true  # Set to "false" to disable message linking
ENABLE_IMAGE_ANALYSIS=true  # Set to "false" to disable image analysis

# Performance settings
MAX_MESSAGES_PER_CHAT=50  # Maximum number of messages to keep in chat history
DEFAULT_TONE=informative  # Default tone for responses

# Add any other environment variables as needed
